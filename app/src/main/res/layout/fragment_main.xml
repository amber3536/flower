<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_main"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp"

    >
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myCardView"
        android:layout_width="204dp"
        android:layout_height="204dp"
        android:background="@drawable/circular_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.cardview.widget.CardView

        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="100dp"
        android:background="@drawable/circular_border"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

    <ImageView
        android:id="@+id/petalView"
        android:layout_width="match_parent"

        android:layout_height="match_parent"


        android:src="@mipmap/red_rose_photo"


        />
    </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/meditations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meditations"
        android:textSize="@dimen/category_size"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/selectionsAbdulBaha"
        android:layout_marginTop="15dp"
        android:paddingBottom="80dp"
        app:layout_constraintEnd_toStartOf="@id/bahaullah"
        />



    <TextView
        android:id="@+id/bahaullah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bahaullah"
        android:textSize="@dimen/figure_size"
        android:fontFamily="@font/fredokaone_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintBottom_toTopOf="@id/theBab"
        />

    <TextView
        android:id="@+id/theBab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/the_bab"
        android:textSize="@dimen/figure_size"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/fredokaone_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bahaullah"


        />

    <TextView
        android:id="@+id/abdulBaha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/abdulbaha"
        android:textSize="@dimen/figure_size"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/fredokaone_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/theBab"
        app:layout_constraintBottom_toTopOf="@id/myCardView"
        android:layout_marginBottom="28dp"

        />
    <!--

    -->



    <TextView
        android:id="@+id/prayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prayers"
        android:textSize="@dimen/category_size"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintBottom_toTopOf="@id/bahaullah"
        />


    <TextView
        android:id="@+id/mysticalWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mystical_words"
        android:textSize="@dimen/category_size"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat_regular"
        android:paddingBottom="80dp"
        android:layout_marginTop="15dp"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/bahaullah"
        app:layout_constraintTop_toBottomOf="@id/fourValleys"
        />


    <TextView
        android:id="@+id/hiddenWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hidden_words"
        android:textSize="@dimen/figure_size"
        app:layout_constraintTop_toBottomOf="@id/myCardView"
        app:layout_constraintStart_toEndOf="@id/bahaullah"
        android:fontFamily="@font/fredokaone_regular"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintBottom_toTopOf="@id/sevenValleys"
        />

    <TextView
        android:id="@+id/sevenValleys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seven_valleys"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/figure_size"
        android:fontFamily="@font/fredokaone_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bahaullah"
        app:layout_constraintTop_toBottomOf="@id/hiddenWords"
        app:layout_constraintBottom_toTopOf="@id/fourValleys"

        />

    <TextView
        android:id="@+id/fourValleys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/four_valleys"
        android:textSize="@dimen/figure_size"
        app:layout_constraintStart_toEndOf="@id/bahaullah"
        android:fontFamily="@font/fredokaone_regular"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@id/sevenValleys"
        app:layout_constraintBottom_toTopOf="@id/mysticalWords"
        />

    <TextView
        android:id="@+id/parisTalks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paris_talks"
        android:textSize="@dimen/figure_size"
        app:layout_constraintTop_toBottomOf="@id/myCardView"
        app:layout_constraintBottom_toTopOf="@id/lightOfTheWorld"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/fredokaone_regular"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/bahaullah"
        />



    <TextView
        android:id="@+id/lightOfTheWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light of the World"
        android:textSize="@dimen/figure_size"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/fredokaone_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parisTalks"
        app:layout_constraintBottom_toTopOf="@id/selectionsAbdulBaha"
        app:layout_constraintEnd_toEndOf="@id/bahaullah"
        />



    <TextView
        android:id="@+id/selectionsAbdulBaha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selections_from_abdulbaha"
        android:textSize="@dimen/figure_size"
        app:layout_constraintEnd_toEndOf="@id/bahaullah"
        android:fontFamily="@font/fredokaone_regular"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lightOfTheWorld"
        app:layout_constraintBottom_toTopOf="@id/meditations"
        />





</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>