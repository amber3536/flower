<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightBlue"
    tools:context="com.hfad.flower.TheBab">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout">
        <ListView
            android:id="@+id/the_bab_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toTopOf="@+id/fab_the_bab"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </ListView>




    </LinearLayout>

    <TextView
        android:id="@+id/tv_the_bab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fab_the_bab"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Play All"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/montserrat_regular"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_the_bab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        app:backgroundTint="#CCD6DD"
        app:fabCustomSize="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@android:drawable/ic_media_play"
        app:layout_constraintBottom_toBottomOf="@id/tv_the_bab"
        />


</androidx.constraintlayout.widget.ConstraintLayout>