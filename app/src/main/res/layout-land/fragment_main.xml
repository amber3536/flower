<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_main"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <ImageView
        android:id="@+id/petalView"
        android:layout_width="match_parent"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="220dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingBottom="10dp"
        android:src="@mipmap/red_rose_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />






    <TextView
        android:id="@+id/bahaullah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bahá'u'lláh"

        android:fontFamily="@font/fredokaone_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintBottom_toTopOf="@id/theBab"
        />

    <TextView
        android:id="@+id/theBab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Báb"

        android:layout_marginTop="10dp"
        android:fontFamily="@font/fredokaone_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bahaullah"


        />

    <TextView
        android:id="@+id/abdulBaha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abdu'l Bahá"

        android:layout_marginTop="10dp"
        android:fontFamily="@font/fredokaone_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/theBab"
        app:layout_constraintBottom_toTopOf="@id/petalView"
        android:layout_marginBottom="10dp"

        />
    <!--

    -->



    <TextView
        android:id="@+id/prayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prayers"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bahaullah"
        />


    <TextView
        android:id="@+id/mysticalWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mystical Words"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat_regular"
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/petalView"
        app:layout_constraintTop_toBottomOf="@id/fourValleys"
        />


    <TextView
        android:id="@+id/hiddenWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hidden Words"

        app:layout_constraintTop_toTopOf="@id/petalView"
        app:layout_constraintStart_toEndOf="@id/petalView"
        android:fontFamily="@font/fredokaone_regular"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintBottom_toTopOf="@id/sevenValleys"
        />

    <TextView
        android:id="@+id/sevenValleys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seven Valleys"
        android:layout_marginTop="10dp"

        android:fontFamily="@font/fredokaone_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/petalView"
        app:layout_constraintTop_toBottomOf="@id/hiddenWords"
        app:layout_constraintBottom_toTopOf="@id/fourValleys"

        />

    <TextView
        android:id="@+id/fourValleys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Four Valleys"

        app:layout_constraintStart_toEndOf="@id/petalView"
        android:fontFamily="@font/fredokaone_regular"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@id/sevenValleys"
        app:layout_constraintBottom_toTopOf="@id/mysticalWords"
        />

    <TextView
        android:id="@+id/meditations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meditations"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/selectionsAbdulBaha"
        android:layout_marginTop="15dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toStartOf="@id/petalView"
        />

    <TextView
        android:id="@+id/parisTalks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paris Talks"

        app:layout_constraintEnd_toStartOf="@id/petalView"
        app:layout_constraintBottom_toTopOf="@id/lightOfTheWorld"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/fredokaone_regular"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="@id/petalView"
        />



    <TextView
        android:id="@+id/lightOfTheWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light of the World"

        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/fredokaone_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parisTalks"
        app:layout_constraintBottom_toTopOf="@id/selectionsAbdulBaha"
        app:layout_constraintEnd_toStartOf="@id/petalView"
        />



    <TextView
        android:id="@+id/selectionsAbdulBaha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selections From Abdu'l Bahá"

        app:layout_constraintEnd_toEndOf="@id/bahaullah"
        android:fontFamily="@font/fredokaone_regular"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/petalView"
        app:layout_constraintTop_toBottomOf="@id/lightOfTheWorld"
        app:layout_constraintBottom_toTopOf="@id/meditations"
        />





</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>